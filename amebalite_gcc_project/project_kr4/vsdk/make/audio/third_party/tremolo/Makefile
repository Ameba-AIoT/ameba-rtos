
include $(MAKE_INCLUDE_GEN)

.PHONY: all clean
TARGET_LIB = lib_vorbisdec

#*****************************************************************************#
#                               VARIABLES	                              #
#*****************************************************************************#
DIR = $(BASEDIR)/component/audio/third_party/tremolo

MODULE_IFLAGS += -I$(DIR)

vpath %.c $(shell find $(DIR)/ -type d)
#*****************************************************************************#
#                               CFLAGS                                        #
#*****************************************************************************#
GLOBAL_CFLAGS := $(filter-out -Werror, $(GLOBAL_CFLAGS))
GLOBAL_CFLAGS += -D__RTOS__ -DONLY_C

#*****************************************************************************#
#                               Source FILE LIST                              #
#*****************************************************************************#
CSRC  = \
    $(DIR)/bitwise.c \
    $(DIR)/codebook.c \
    $(DIR)/dsp.c \
    $(DIR)/floor0.c \
    $(DIR)/floor1.c \
    $(DIR)/floor_lookup.c \
    $(DIR)/framing.c \
    $(DIR)/mapping0.c \
    $(DIR)/mdct.c \
    $(DIR)/misc.c \
    $(DIR)/res012.c \
    $(DIR)/treminfo.c \
    $(DIR)/vorbisfile.c \

#*****************************************************************************#
#                               Object FILE LIST                              #
#*****************************************************************************#
OBJS = $(notdir $(CSRC:.c=.o))

#*****************************************************************************#
#                               Include Dependency                            #
#*****************************************************************************#
-include $(OBJS:.o=.d)


#*****************************************************************************#
#                        RULES TO GENERATE TARGETS                            #
#*****************************************************************************#

# Define the Rules to build the core targets
COPY_RAM_OBJS: CORE_TARGETS
all: COPY_RAM_OBJS
	$(call GEN_AND_MOVE_TO_LIB_FOLDER, $(TARGET_LIB), $(TARGET_LIBAPP_FOLDER))
#*****************************************************************************#
#              GENERATE OBJECT FILE
#*****************************************************************************#
CORE_TARGETS: $(OBJS)

#*****************************************************************************#
#              GENERATE GIT VERSION FILE                                      #
#*****************************************************************************#

#*****************************************************************************#
#              CLEAN GENERATED FILES                                          #
#*****************************************************************************#
clean: CLEAN_OBJS
	$(call CLEAN_FUNC)
-include $(DEPS)
