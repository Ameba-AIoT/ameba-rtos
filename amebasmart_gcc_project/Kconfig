mainmenu "AmebaSmart Configuration"

comment "--------MENUCONFIG FOR General---------"

#Release flag, set to y after release
config AMEBA_RLS
  def_bool y

config AMEBASMART
    def_bool y

#---------- FEATURE LIST START-----------#
#All features are invisible in menuconfig

config SUPPORT_NAND_FLASH
    def_bool y

config SUPPORT_FATFS_USB
    def_bool y

config SUPPORT_SD_CARD
    def_bool y

#
# USB features
#

# USB function
config SUPPORT_USB
    def_bool y

# USB shared DFIFO mode
config SUPPORT_USB_SHARED_DFIFO
    def_bool y

# USB UAC device
config SUPPORT_USBD_UAC
    def_bool y

config SUPPORT_USBH_UAC
    def_bool y

# USB ECM host
config SUPPORT_USBH_ECM
    def_bool y

# USB ECM bridge
config SUPPORT_USBH_ECM_BRIDGE
    def_bool y

config SUPPORT_SDIOH
    def_bool y

config SUPPORT_SMP
    def_bool y

#
# Audio features
#

# audio device function
config SUPPORT_AUDIO_DEVICE
    def_bool y

#---------- FEATURE LIST END-------------#

menu "CONFIG Link Option"
    choice
        prompt "IMG1(Bootloader) running on SRAM?"
        default IMG1_SRAM
        config IMG1_SRAM
            bool "SRAM"
    endchoice

    choice
        prompt "IMG2(Application) running on PSRAM or FLASH?"
        default IMG2_PSRAM
        config IMG2_PSRAM
            depends on !CP_TEST_CA32
            bool "PSRAM"
        config IMG2_FLASH
            bool "FLASH"
    endchoice
endmenu

menu "CONFIG TrustZone"
    config TRUSTZONE_FOR_KM4
        bool "Enable TrustZone"
    config TRUSTZONE_EN
        depends on TRUSTZONE_FOR_KM4
        bool
        default y
endmenu


menu "CONFIG Linux"
    config LINUX_FW_EN
        bool "Enable Linux (CA32 Linux Need KM4 Support)"
endmenu

rsource "../component/at_cmd/Kconfig"

rsource "../component/soc/common/rtk_assert/Kconfig"

rsource "../component/file_system/Kconfig"

rsource "../component/os/Kconfig"

orsource "../component/utils/Kconfig"

menu "CONFIG OTA OPTION"
    config UPGRADE_BOOTLOADER
        bool "Enable Bootloader OTA"

    config COMPRESS_OTA_IMG
        bool "Enable Compress APP Image"
endmenu

rsource "../component/usb/Kconfig"

menu "CONFIG APPLICATION"

    orsource "../component/ui/Kconfig"

    orsource "../component/audio/Kconfig"

    rsource "../component/utils/ipc/Kconfig"

    rsource "../component/dynamic_app/Kconfig"

    menu "AI Config"
        orsource "../component/tflite_micro/Kconfig"
        orsource "../component/aivoice/Kconfig"
        if AIVOICE_EN_MENU
            orsource "../component/application/speechmind/Kconfig"
        endif
    endmenu

    orsource "../component/application/Kconfig"

    orsource "${APP_DIR}/Kconfig.prj"

    orsource "../component/application/matter/project/cmake/Kconfig"

    rsource "../component/soc/common/diagnose/Kconfig"

endmenu


comment "-----Connectivity Config-----"
menu "CONFIG WHC INTF"
    choice
        prompt "WHC MODE"
        default WHC_INTF_IPC_MENU
        config WHC_INTF_IPC_MENU
            bool "WHC_IPC"
            select WHC_INTF_IPC
            select WHC_DEV_FOR_KM4
            select WHC_HOST_FOR_CA32
        # config FULLMAC_DEV
        #     bool "FULLMAC"
        config WIFI_SINGLE_CORE_MENU
            bool "SINGLE CORE"
            select WHC_NONE_FOR_KM4
        # config SDIO_BRIDGE
        #     bool "SDIO_BRIDGE"
        # config SPI_FULLMAC_HOST
        #     bool "SPI_FULLMAC_HOST"

    endchoice

    if FULLMAC_DEV
        choice
            prompt "FULLMAC INTERFACE"
            config SPI_FULLMAC
                bool "SPI_FULLMAC"
            config USB_FULLMAC
                bool "USB_FULLMAC"
            config SDIO_FULLMAC
                bool "SDIO_FULLMAC"
        endchoice
    endif

    config WHC_HOST_FOR_CA32
        bool
    config WHC_DEV_FOR_KM4
        bool
    config WHC_HOST_FOR_KM4
        bool
    config WHC_NONE_FOR_KM4
        bool
    config WHC_WIFI_API_PATH
        bool
endmenu

menu "CONFIG WIFI"
    config WLAN_MENU
        depends on !CP_TEST_CA32
        bool "Enable Wifi"
        default y
    if WLAN_MENU

        rsource "../component/wifi/Kconfig.wifi"

        config WHC_INTF_IPC_MENU
            bool
            select WHC_WIFI_API_PATH
            select WLAN if WHC_HOST||WHC_DEV
            select AS_INIC_AP if WHC_HOST
            select LWIP_LAYER if WHC_HOST && !MP_SHRINK
            select ENABLE_WPS if WHC_HOST && WIFI_WPS_ENABLE_MENU
            select ENABLE_WPS_DISCOVERY if ENABLE_WPS

        config FULLMAC_DEV
            bool
            depends on WHC_DEV
            select WHC_INTF_SDIO if SDIO_FULLMAC
            select WHC_INTF_SPI if SPI_FULLMAC
            select WHC_INTF_USB if USB_FULLMAC
            select WLAN
            select WIFI_FW_EN

        config SDIO_BRIDGE
            bool
            depends on WHC_NONE
            select WLAN
            select WHC_INTF_SDIO
            select LWIP_LAYER

        config SPI_FULLMAC_HOST
            bool
            depends on WHC_HOST
            select WLAN_FOR_CA32
            select WLAN_FOR_KM4
            select AS_INIC_AP_FOR_CA32
            select LWIP_LAYER

        config WIFI_SINGLE_CORE_MENU
            bool
            depends on WHC_NONE
            select WHC_INTF_IPC
            select WLAN
            select LWIP_LAYER if !MP_SHRINK
            select ENABLE_WPS if WIFI_WPS_ENABLE_MENU
            select ENABLE_WPS_DISCOVERY if ENABLE_WPS

    endif

    if !WLAN_MENU
        config WLAN_DISABLE
            bool
            select AS_INIC_AP if WHC_HOST
            select AS_INIC_NP if WHC_DEV
    endif


    config WLAN
        bool
    config WHC_INTF_IPC
        bool
    config AS_INIC_AP
        bool
    config AS_INIC_NP
        bool
    config LWIP_LAYER
        bool
    config WHC_INTF_SDIO
        bool
    config WHC_INTF_SPI
        bool
    config WHC_INTF_USB
        bool
    config WIFI_FW_EN
        bool
    config ENABLE_WPS
        bool
    config ENABLE_WPS_DISCOVERY
        bool

endmenu

menu "CONFIG BT"
    config BT_MENU
        bool "Enable BT"
    if BT_MENU
        # IC BT capability
        config BT_HAS_BREDR
            def_bool y
        config BT_HAS_MESH
            def_bool y
        config BT_HAS_LEAUDIO
            def_bool y

        choice
            prompt "BT Mode Selection"
            default BT_DUAL_MODE
            config BT_BLE_ONLY
                bool "BLE_ONLY"

            config BT_DUAL_MODE
                bool "DUAL_MODE"
        endchoice

        config BT
            depends on WHC_HOST || WHC_NONE
            bool
            default y
            select FTL_ENABLED

        config FTL_ENABLED
            bool

        rsource "../component/bluetooth/Kconfig"

    endif
endmenu


rsource "../component/lwip/Kconfig"

rsource "../component/ssl/Kconfig"

orsource "../component/wpan/Kconfig"

rsource "../component/rtk_coex/Kconfig.coex"

if !AMEBA_RLS
comment "---------Test Config---------"

menu "Verification and Test"
    # shall all CPU see this option.
    config CP_TEST_CA32
        bool "CP Test CA32 without external memory"
        help
            Enable this option to let CA32 run code from SRAM in CP stage for test purpose.
            This option is only for internal test, do not enable it in normal project.
            It will reduce available memory size for CA32 application.

    rsource "../component/soc/amebasmart/Kconfig"
endmenu
endif

comment "--------Build Config---------"

menu "Build Option"

    config FPGA
        bool "Select FPGA"
        depends on !AMEBA_RLS
        default y

    comment "Choose the build configuration"
    choice
        prompt "Link ROM Mode"
        default LINK_ROM_SYMB

        config LINK_ROM_LIB
            bool "Link_ROM_Library"

        config LINK_ROM_SYMB
            bool "Link_ROM_Symbol"
    endchoice
endmenu

