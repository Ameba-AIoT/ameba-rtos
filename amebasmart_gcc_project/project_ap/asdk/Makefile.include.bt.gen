BLEDIR = $(BASEDIR)/component/bluetooth

IFLAGS += \
	-I$(BASEDIR)/component/soc/amebasmart/fwlib/include \
	-I$(BLEDIR)/rtk_coex \
	-I$(BLEDIR)/driver \
	-I$(BLEDIR)/driver/hci \
	-I$(BLEDIR)/driver/inc \
	-I$(BLEDIR)/driver/inc/hci \
