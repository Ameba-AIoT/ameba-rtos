
include $(MAKE_INCLUDE_GEN)

.PHONY: all clean

#*****************************************************************************#
#                               VARIABLES	                              #
#*****************************************************************************#

#*****************************************************************************#
#                        RULES TO GENERATE TARGETS                            #
#*****************************************************************************#
all: clean
	@make -C $(SRCDIR) all
	@find $(SRCDIR) -type f -regex '.*\(\.i\|\.d\|\.s\|\.su\|\.o\)' |xargs -i mv {} ./
ifeq ($(CONFIG_RDP_TFM), y)
	@make -C $(TFM_NS_DIR) all
	@find $(TFM_NS_DIR) -type f -regex '.*\(\.i\|\.d\|\.s\|\.su\|\.o\)' |xargs -i mv {} ./
endif

#*****************************************************************************#
#                        RULES TO CLEAN TARGETS                               #
#*****************************************************************************#
clean:
	$(call CLEAN_FUNC)

-include $(DEPS)	
