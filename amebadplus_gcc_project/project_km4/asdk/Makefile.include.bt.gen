BLEDIR = $(BASEDIR)/component/bluetooth

IFLAGS += \
	-I$(BASEDIR)/component/soc/amebadplus/fwlib/include \
	-I$(BLEDIR)/rtk_coex \
	-I$(BLEDIR)/driver \
	-I$(BLEDIR)/driver/dtm \
