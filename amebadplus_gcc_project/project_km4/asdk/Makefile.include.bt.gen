	-I$(BLEDIR)/driver/inc/hci \
	-I$(BLEDIR)/driver/platform/amebadplus/inc \
	-I$(BLEDIR)/osif \
	-I$(BLEDIR)/bt_mp

ifeq ($(CONFIG_BT_ZEPHYR), y)
