menu "CONFIG VFS"
    config VFS_LITTLEFS_INCLUDED
        bool "Enable VFS LITTLEFS"
        default n
    if VFS_LITTLEFS_INCLUDED
        choice
            prompt "FLASH Type"
            config LITTLEFS_FLASH
                bool "FLASH"
            config LITTLEFS_SECONDARY_FLASH
                bool "Secondary FLASH"
            if LITTLEFS_SECONDARY_FLASH
                config SECONDARY_FLASH_SIZE
                    int "Secondary FLASH Size[KB]"
                    default 4096
            endif
        endchoice
    endif
    config VFS_FATFS_INCLUDED
        bool "Enable VFS FATFS"
    if VFS_FATFS_INCLUDED
        choice
            prompt "FATFS Memory Type"
            config FATFS_DISK_FLASH_MENU
                bool "FLASH"
                select FATFS_DISK_FLASH
            if FATFS_DISK_FLASH
                choice
                    prompt "FLASH Type"
                    config FATFS_FLASH
                        bool "FLASH"
                    config FATFS_SECONDARY_FLASH
                        bool "Secondary FLASH"
                    if FATFS_SECONDARY_FLASH
                        config SECONDARY_FLASH_SIZE
                            int "Secondary FLASH Size[KB]"
                            default 4096
                    endif
                endchoice
            endif
            config FATFS_DISK_SD_MENU   #amebasmart  green2 smartplus
                bool "SD"
                select FATFS_DISK_SD
            if FATFS_DISK_SD
                choice
                    prompt "SDIO MODE"
                    config FATFS_SD_MODE
                        bool "SD MODE"
                        depends on SUPPORT_NAND_FLASH
                    config FATFS_SD_SPI_MODE
                        bool "SD SPI MODE"
                   endchoice
            endif
        endchoice
        if FATFS_FLASH_INTERNAL
            config FATFS_WITHIN_APP_IMG
                bool "FATFS within APP Image"
        endif
        config FATFS_READ_ONLY
            bool "FATFS Read Only"
    endif
endmenu

config FATFS_DISK_FLASH
bool

config FATFS_DISK_SD
bool
